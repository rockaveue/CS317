<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="main activity"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/textView1"
        android:textSize="10dp"
        android:text="GO INTO SUB ACT" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/button1"
        android:layout_toRightOf="@+id/textView1"
        android:text="ACTION VIEW"
        android:textSize="10dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/textView1"
        android:text="ACTION VIEW 1" />
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/textView1"
        android:text="ACTION DIAL" />
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/textView1"
        android:text="ACTION EDIT" />
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/textView1"
        android:text="SET WALLPAPER" />
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/textView1"
        android:text="SENDTO" />
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:layout_below="@+id/button7"
        android:layout_toRightOf="@+id/textView1"
        android:text="PICK from song" />
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/textView1"
        android:text="PICK from image" />
    <TextView
        android:id="@+id/txtStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button9"
        android:layout_alignParentLeft="true"
        android:text="0 min, 0 sec" />
    <SeekBar
        android:id="@+id/sBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button9"
        android:layout_toLeftOf="@+id/txtSongTime"
        android:layout_toRightOf="@+id/txtStartTime" />
    <TextView
        android:id="@+id/txtSongTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button9"
        android:text="0 min, 0 sec " />

    <TextView
        android:id="@+id/imageView3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/button9"
        android:text="123456"
        android:textSize="20dp"
        android:layout_toRightOf="@id/textView1"/>
    <ImageView
        android:id="@+id/imageView1"
        android:layout_height="220dp"
        android:layout_width="fill_parent"
        android:layout_below="@id/sBar"/>

</RelativeLayout>