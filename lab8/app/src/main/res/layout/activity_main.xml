<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baraa"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Бараа"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Бараа дугаар"
        android:id="@+id/textView"
        android:layout_below="@id/baraa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Бараа нэр"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Бараа үнэ"
        android:id="@+id/textView7"
        android:layout_below="@+id/editText_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Төрөл дугаар"
        android:id="@+id/textView3"
        android:layout_below="@+id/editText_une"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_id"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_name"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_une"
        android:layout_below="@+id/editText_name"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_turul"
        android:layout_below="@+id/editText_une"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бичлэг нэмэх"
        android:id="@+id/button_add"
        android:layout_below="@+id/editText_turul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:layout_marginTop="76dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бичлэг засах"
        android:id="@+id/button_update"
        android:layout_below="@+id/editText_turul"
        android:layout_toRightOf="@id/button_add"
        android:layout_margin="4dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бичлэг устгах"
        android:id="@+id/button_delete"
        android:layout_below="@+id/button_add"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/button_viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_update"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/button_delete"
        android:text="Хүснэгт харах" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baraaturul"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Бараа төрөл"
        android:layout_below="@+id/button_delete"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Төрөл дугаар"
        android:id="@+id/textview4"
        android:layout_below="@+id/baraaturul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Төрөл нэр"
        android:id="@+id/textview5"
        android:layout_below="@+id/editText_turul_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_turul_id"
        android:layout_alignTop="@+id/textview4"
        android:layout_toRightOf="@+id/textview4"
        android:layout_toEndOf="@+id/textview4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_turul_ner"
        android:layout_below="@+id/editText_turul_id"
        android:layout_toRightOf="@+id/textview5"
        android:layout_toEndOf="@+id/textview5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бичлэг нэмэх"
        android:id="@+id/button_add2"
        android:layout_below="@+id/editText_turul_ner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:layout_marginTop="76dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бичлэг засах"
        android:id="@+id/button_update2"
        android:layout_below="@+id/editText_turul_ner"
        android:layout_toRightOf="@id/button_add2"
        android:layout_margin="4dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бичлэг устгах"
        android:id="@+id/button_delete2"
        android:layout_below="@+id/button_add2"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Хүснэгт харах"
        android:id="@+id/button_viewAll2"
        android:layout_below="@+id/button_update2"
        android:layout_toRightOf="@id/button_delete2"
        android:layout_margin="4dp" />
</RelativeLayout>